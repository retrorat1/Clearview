<addons>

<addon id="plugin.video.clearstream-builds" name="Clearstream Builds" version="1.0.1" provider-name="retrorat1">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Clearstream</summary>
    <description lang="en">This is the place to find all our build </description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.clearviewwiz" name="Clearview Wizard" version="0.0.1" provider-name="Retrorat">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Clearview Wizard</summary>
    <description lang="en">Clearview Wizard provides easy access to fixes and maintenance for Clearview Guide. Created By Richard Payne and edited by Robert Kurian for Clearstream.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.kodination"
        name="KodiNation Repository"
        version="1.0.1"
        provider-name="KodiNation">
    <extension point="xbmc.addon.repository"
        name="KodiNation Repository">
        <info compressed="false">http://svn.kodination.com/repo/kodination/addons.xml</info>
        <checksum>http://svn.kodination.com/repo/kodination/addons.xml.md5</checksum>
        <datadir zip="true">http://svn.kodination.com/repo/kodination/repo</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>KodiNation Repository</summary>
         <description>Plugins and addons created by the KodiNation Group</description>
	<disclaimer>All plugins are covered by the POGO license: Patch it Or Get the fuck Out </disclaimer>
        <license>POGO</license> 
		<platform>all</platform>
		<noicon>false</noicon> 
		<nofanart>false</nofanart> 
    </extension>
</addon>

<addon id="script.clearviewskins" name="Clearview Skins" version="1.0.2" provider-name="retrorat1">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Clearview Skins</summary>
    <description lang="en">This is the place to find all our Guide Skins </description>
    <platform>all</platform>
  </extension>
</addon>

